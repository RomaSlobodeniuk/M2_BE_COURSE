<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Roma_Test::roma_main" title="Cars and Customers" translate="title" sortOrder="20">
                    <resource id="Roma_Test::roma_manage_customers" title="My All Customers" translate="title" sortOrder="10">
                        <resource id="Roma_Test::roma_manage_customers_actions" title="Actions" translate="title" sortOrder="10">
                            <resource id="Roma_Test::customer_add" title="Add Customer" translate="title" sortOrder="10" />
                            <resource id="Roma_Test::customer_edit" title="Edit Customer" translate="title" sortOrder="20" />
                            <resource id="Roma_Test::customer_mass_delete" title="Mass Delete Customer" translate="title" sortOrder="30" />
                            <resource id="Roma_Test::customer_delete" title="Delete Customer" translate="title" sortOrder="40" />
                        </resource>
                    </resource>
                    <resource id="Roma_Test::roma_manage_cars" title="My All Cars" translate="title" sortOrder="10">
                        <resource id="Roma_Test::roma_manage_cars_actions" title="Actions" translate="title" sortOrder="10">
                            <resource id="Roma_Test::car_add" title="Add Car" translate="title" sortOrder="10" />
                            <resource id="Roma_Test::car_edit" title="Edit Car" translate="title" sortOrder="20" />
                            <resource id="Roma_Test::car_mass_delete" title="Mass Delete Cars" translate="title" sortOrder="30" />
                            <resource id="Roma_Test::car_delete" title="Delete Car" translate="title" sortOrder="40" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Roma_Test::roma" title="Roma Integration" translate="title" sortOrder="50" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
